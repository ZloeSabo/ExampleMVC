<routes>

    <route>
        <name>survey_edit</name>
        <path>/survey/{id}/edit</path>
        <controller>Admin</controller>
        <action>edit</action>
    </route>

    <route>
        <name>survey_delete</name>
        <path>/survey/{id}/delete</path>
        <controller>Admin</controller>
        <action>delete</action>
    </route>

    <route>
        <name>survey_status</name>
        <path>/survey/{id}/status/{newstatus}</path>
        <controller>Admin</controller>
        <action>changeStatus</action>
    </route>

    <route>
        <name>survey</name>
        <path>/survey/{surveyname}</path>
        <controller>Survey</controller>
        <action>view</action>
    </route>

    <route>
        <name>admin_index</name>
        <path>/admin</path>
        <controller>Admin</controller>
        <action>index</action>
    </route>

    <route>
        <name>main</name>
        <path>/</path>
        <controller>Survey</controller>
        <action>index</action>
    </route>


</routes>
